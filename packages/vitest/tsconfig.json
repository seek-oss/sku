{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNext",
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "nodenext",
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "types": ["node"],
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/@loadable"]
}
