{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./tsdown.config.ts"],
  "exclude": ["./templates"]
}
