{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "module": "node18",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    // Output incremental build info to node_modules
    "outDir": "node_modules/.cache/typescript",
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": ["**/*", "eslint.config.js", "types.d.ts"],
  "exclude": [
    "node_modules",
    "fixtures",
    "packages/sku",
    "packages/codemod",
    "packages/create"
  ]
}
