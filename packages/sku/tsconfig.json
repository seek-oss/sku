{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNext",
    "outDir": "./dist",
    "allowJs": true,
    "module": "nodenext",
    "baseUrl": "./",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/@loadable"]
}
