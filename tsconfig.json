{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    // Output incremental build info to node_modules
    "outDir": "node_modules/.cache/typescript",
    "incremental": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "fixtures",
    "packages/sku",
    "packages/codemod"
  ]
}
