{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    // Output incremental build info to node_modules
    "outDir": "node_modules/.cache/typescript",
    "incremental": true
  },
  "include": ["tests/**/*", "test-utils/**/*"]
}
